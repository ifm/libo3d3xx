{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "O3D3xx network configuration",
	"type": "object",
	
	"properties": {
		"StaticIPv4Address": {
			"type": "string",
			"format": "ipv4",
			"default": "192.168.0.69"
		},
		"StaticIPv4SubNetMask": {
			"type": "string",
			"format": "ipv4",
			"default": "255.255.255.0"
		},
		"StaticIPv4Gateway": {
			"type": "string",
			"format": "ipv4",
			"default": "192.168.0.201"
		},
		"UseDHCP": {
			"type": "boolean",
			"default": false
		},
		"NetworkSpeed": {
			"type": "integer",
			"minimum": 0,
			"maximum": 0,
			"default": 0
		},
		"MACAddress": {
			"type": "string",
			"pattern": "^([0-9a-fA-F][0-9a-fA-F]:){5}([0-9a-fA-F][0-9a-fA-F])$",
			"attributes": [ "readonly" ]
		}
	},
	
	"required": [
		"StaticIPv4Address", "StaticIPv4SubNetMask", "StaticIPv4Gateway",
		"UseDHCP"
	]
}