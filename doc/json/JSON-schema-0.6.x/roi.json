{
	"$schema": "http://json-schema.org/schema#",
	"title": "O3D3xx ROI format",
	"type": "object",

	"properties": {
		"ROIs": {
			"type": "array",
			"items": {
				"oneOf": [
					{
						"type": "object",
						"properties": {
							"id": {
								"type": "integer",
								"minimum": 0,
								"maximum": 63
							},
							"group": {
								"type": "integer",
								"minimum": 0,
								"maximum": 63
							},
							"type": {
								"enum": [ "Rect", "Ellipse" ]
							},
							"width": { "type": "number" },
							"height": { "type": "number" },
							"angle": { "type": "number" },
							"center_x": { "type": "number" },
							"center_y": { "type": "number" }
						},
						"required": ["id","group","type","width","height","angle","center_x","center_y"]
					},
					{
						"type": "object",
						"properties": {
							"id": {
								"type": "integer",
								"minimum": 0,
								"maximum": 63
							},
							"group": {
								"type": "integer",
								"minimum": 0,
								"maximum": 63
							},
							"type": {
								"enum": [ "Poly" ]
							},
							"points": {
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"x": { "type": "number" },
										"y": { "type": "number" }
									}
								}
							}
						},
						"required": ["id","group","type","points"]
					}
				]
			}
		},
		"MultiROIs": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"param": {
						"type": "object",
						"properties": {
							"shape": { "enum": ["Rect","Ellipse","Square","Circle","Hexagon"] },
							"cols": {"type": "integer"},
							"rows": {"type": "integer"},
							"gridtype": { "enum": ["Regular"] },
							"spacing": { "type": "number" },
							"width": { "type": "number" },
							"height": { "type": "number" },
							"center_x": { "type": "number" },
							"center_y": { "type": "number" },
							"angle": { "type": "number" }
						}
					},
					"rois": {
						"type": "array",
						"items": {
							"type": "integer",
							"minimum": 0,
							"maximum": 63
						}
					}
				}
			}
		}
	}
}